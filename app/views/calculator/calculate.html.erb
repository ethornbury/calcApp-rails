<h1>Simple Calculator </h1>

<%= form_tag '/sum' do %>
    <%= text_field_tag :number1 %>
    <%= text_field_tag :number2 %>
    <%= submit_tag "+" %>
<% end %>

<%= form_tag '/minus' do %>
    <%= text_field_tag :number1 %>
    <%= text_field_tag :number2 %>
    <%= submit_tag " - " %>
<% end %>

<%= form_tag '/division' do %>
    <%= text_field_tag :number1 %>
    <%= text_field_tag :number2 %>
    <%= submit_tag " / " %>
<% end %>

<%= form_tag '/multiplication' do %>
    <%= text_field_tag :number1 %>
    <%= text_field_tag :number2 %>
    <%= submit_tag " * " %>
<% end %>
